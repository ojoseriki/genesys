<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"

    tools:context="com.example.st.genesys.goodsPage">


    <Button
        android:id="@+id/menu_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:text="Main Menu" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menu_btn"
        android:layout_marginTop="27dp"
        android:text="ITEMS" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="GOODS" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/goods1"
        android:layout_alignStart="@+id/qty1"
        android:text="QUANTITY" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:text="TOTAL PRICE" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="14dp"
        android:text="1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="15dp"
        android:text="" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="13dp"
        android:text="2" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="15dp"
        android:text="3" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="" />

    <EditText
        android:id="@+id/goods1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginRight="220dp"
        android:ems="10"
        android:hint="Goods"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/qty1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="10dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="number" />

    <EditText
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/qty1"
        android:layout_alignBottom="@+id/qty1"
        android:layout_alignStart="@+id/textView5"
        android:ems="10"
        android:hint="Total Price"
        android:inputType="textPersonName|number" />

    <EditText
        android:id="@+id/goods2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/goods1"
        android:layout_marginRight="220dp"
        android:ems="10"
        android:hint="Goods"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/qty2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/goods2"
        android:layout_alignBottom="@+id/goods2"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="220dp"
        android:layout_marginStart="10dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="number" />

    <EditText
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/qty2"
        android:layout_alignBottom="@+id/qty2"
        android:layout_alignStart="@+id/price1"
        android:ems="10"
        android:hint="Total price"
        android:inputType="textPersonName|number" />

    <EditText
        android:id="@+id/good3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView12"
        android:layout_alignStart="@+id/goods2"
        android:layout_marginRight="220dp"
        android:ems="10"
        android:hint="Goods"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/qty3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/good3"
        android:layout_alignBottom="@+id/good3"
        android:layout_alignStart="@+id/qty2"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="number" />

    <EditText
        android:id="@+id/price3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/qty3"
        android:layout_alignBottom="@+id/qty3"
        android:layout_alignStart="@+id/price2"
        android:ems="10"
        android:hint="Total Price"
        android:inputType="number" />

    <TextView
        android:id="@+id/total_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goods_submit"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/hours_edit" />

    <Button
        android:id="@+id/goods_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_below="@+id/hours_edit"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="22dp"
        android:background="@color/colorPrimaryDark"
        android:text="Submit" />

    <EditText
        android:id="@+id/hours_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Time Of Work"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hours_edit"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/hours_edit"
        android:text="In Hours" />

    <TextView
        android:id="@+id/hout_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/hours_edit"
        android:layout_below="@+id/total_price" />


</RelativeLayout>
